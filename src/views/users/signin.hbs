<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1>Login</h1>
            </div>
            <img src="/img/logo.png" alt="" class="logo rounded-circle mx-auto d-block m-4 ">
            <div class="card-body"> 
                <form action="/users/signin">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Ingrese Correo" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Ingrese Password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
